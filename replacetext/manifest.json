{
    "manifest_version": 2,
    "name": "Replace Text",
    "version": "1.0",
    "description": "Replace text on web pages.",

    "icons": {
      "48": "icon/border-48.png"
    },

    "permissions": [
      "tabs",
      "https://*/*",
      "http://*/*",
      "storage"
    ],

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_icon": "icon/border-48.png",
      "default_title": "Replace Text",
      "default_popup": "popup/replace.html"
    }
  }
  